<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hiyoriaya.aug0114.YGO"
    android:id="@+id/rl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOU"
        android:id="@+id/textView3"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ENEMY"
        android:id="@+id/textView4"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/2"
        android:id="@+id/yharf"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:id="@+id/y1000"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/yharf"
        android:layout_alignStart="@+id/yharf" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:id="@+id/y500"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/y1000"
        android:layout_alignLeft="@+id/y1000"
        android:layout_alignStart="@+id/y1000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/y100"
        android:layout_below="@+id/y500"
        android:layout_alignLeft="@+id/y500"
        android:layout_alignStart="@+id/y500"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:id="@+id/y50"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/y100"
        android:layout_alignStart="@+id/y100" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/2"
        android:id="@+id/eharf"
        android:layout_alignTop="@+id/yharf"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:id="@+id/e1000"
        android:layout_alignTop="@+id/y1000"
        android:layout_alignLeft="@+id/eharf"
        android:layout_alignStart="@+id/eharf" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:id="@+id/e500"
        android:layout_alignTop="@+id/y500"
        android:layout_alignLeft="@+id/e1000"
        android:layout_alignStart="@+id/e1000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/e100"
        android:layout_alignTop="@+id/y100"
        android:layout_alignLeft="@+id/e500"
        android:layout_alignStart="@+id/e500" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:id="@+id/e50"
        android:layout_alignTop="@+id/y50"
        android:layout_alignLeft="@+id/e100"
        android:layout_alignStart="@+id/e100" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="8000"
            android:id="@+id/lpy"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="8000"
            android:id="@+id/lpe"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:layout_alignTop="@+id/lpy"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回復モード"
            android:id="@+id/modec"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="リセット"
            android:id="@+id/reset"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
